<div class="container-fluid">
    <div class="cart-container">
        <div class="cart-header">
            <h2>Shopping Cart</h2>
            <hr>
        </div>
        <div class="cart-column-header">
            <div class="row">
                <div class="col-md-4 col-md-offset-1">
                    <h4>Product</h4>
                </div>
                <div class="col-md-2">
                    <h4>Price</h4>
                </div>
                <div class="col-md-3">
                    <h4>Quantity</h4>
                </div>
                <div class="col-md-2">
                    <h4>Total</h4>
                </div>

            </div>
        </div>
        <div class="cart-body">
            <hr>
            <span id="cart-empty-line">Your cart is currently empty. Browse store <a href="/">here</a>.</span>

        </div>
        <div class="cart-footer">
            <hr>
            <div class="row">
                <div class="col-md-6">
                   <div class="cart-footer-instructions">
                       <h5>Special Instructions: </h5>
                       <textarea rows="5" cols="60" name="instructions" id="instructions">
                       </textarea>

                   </div>
                </div>
                <div class="col-md-6">
                    <div class="cart-footer-total">
                        <h5>Subtotal: $<span id="subtotal">0</span></h5>
                        <h6>Shipping and taxes calculated at checkout.</h6>
                        <br>
                        <button id="cart-update-button" class="btn btn-default">
                            Update Cart
                        </button>
                        <button id="cart-checkout-button" class="btn btn-primary">
                            Checkout
                        </button>
                        <h6>We accept Paypal.</h6>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

